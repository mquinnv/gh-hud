{
  "name": "gh-hud",
  "version": "1.0.2",
  "description": "GitHub workflow monitoring dashboard for terminal",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "gh-hud": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mquinnv/gh-hud.git"
  },
  "bugs": {
    "url": "https://github.com/mquinnv/gh-hud/issues"
  },
  "homepage": "https://github.com/mquinnv/gh-hud#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
