  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@types/blessed": "^0.1.25",
    "@types/node": "^24.3.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "chalk": "^5.6.2",
